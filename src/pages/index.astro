---
import { getCollection } from "astro:content";

import Layout from "../layout/Layout.astro";
import Link from "../components/Link.astro";
import { SITE } from "../config";

const posts = await getCollection("blog", ({ data }) => !data.draft);
const projects = await getCollection("projects", ({ data }) => !data.draft);
---

<Layout>
  <h1>Discover {SITE.author}'s Portfolio</h1>
  <section class="description">
    <p>{SITE.description}</p>
  </section>
  <section class="posts" id="posts">
    <h2>#. Posts</h2>
    <ul>
      {
        posts
          .sort(
            (a, b) =>
              Math.floor(b.data.pubDate / 1000) -
              Math.floor(a.data.pubDate / 1000)
          )
          .slice(0, 6)
          .map((post) => (
            <li>
              <p>{post.data.pubDate.toISOString().split("T")[0]}</p>
              <Link href={`posts/${post.slug}`}>
                <p class="post-title">{post.data.title}</p>
              </Link>
            </li>
          ))
      }
    </ul>
  </section>

  <section class="posts" id="projects">
    <h2>#. Projects</h2>
    <ul>
      {
        projects
          .sort(
            (a, b) =>
              Math.floor(b.data.pubDate / 1000) -
              Math.floor(a.data.pubDate / 1000)
          )
          .map((post) => (
            <li>
              <p>{post.data.pubDate.toISOString().split("T")[0]}</p>
              <a href={post.data.url} target="_blank">
                <p class="post-title">{post.data.title}</p>
              </a>
            </li>
          ))
      }
    </ul>
  </section>
</Layout>

<style>
  .description {
    display: flex;
    flex-direction: column;
    row-gap: var(--spacing-2x);
  }

  .posts ul {
    padding-top: 5px;
    display: flex;
    flex-direction: column;
    gap: var(--spacing);
  }

  .posts ul li {
    display: flex;
    justify-content: space-between;
    column-gap: var(--spacing-8x);
  }

  .posts :global(a) {
    flex: 1;
  }

  @media screen and (max-width: 600px) {
    .posts ul li {
      flex-direction: column;
    }

    .posts ul {
      gap: var(--spacing-2x);
    }
  }
</style>
